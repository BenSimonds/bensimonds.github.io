<h3>All Posts</h3>


<div class="post-list">
    <% page.posts.each(function(post) { %>

        <article class="post-item">
            <div>
                <p><%- full_date(post.date, 'll' ) %></p>
            </div>
            <div>
                <a href="<%- url_for(post.path) %>">
                    <% if (post.title=="" ) { %>
                        No Title
                        <% } else { %>
                            <%- post.title %>
                                <% } %>
                </a>

                <% if (post.summary) { %>
                    <br />
                    <%- post.summary %>
                        <% } %>
            </div>
            <div>
                <% if (post.thumbnail) { %>
                    <a href="<%- url_for(post.path) %>">
                        <img src="<%- url_for(post.path) %><%- post.thumbnail %>" class="thumbnail" />
                    </a>
                    <% } %>

                        <% if (post.thumbnail_old) { %>
                            <a href="<%- url_for(post.path) %>">
                                <img src="<%- post.thumbnail_old %>" class="thumbnail" />
                            </a>
                            <% } %>
            </div>
        </article>
        <% }) %>
</div>

<%- partial('partial/pagination', {type: 'page' }) %>