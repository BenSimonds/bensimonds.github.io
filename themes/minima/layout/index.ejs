<div class="row">
  <div class="column">
    <!-- Main information, edit it on theme/_config.yml -->
    <h2 class="mb-2"><%= theme.owner %></h2>
    I write about data viz and other things that interest me. Previously I wrote lot (including <a href="https://www.amazon.com/Blender-Master-Class-Hands-Sculpting/dp/1593275102">a book</a>) about Blender - an open source 3D app.
  </div>
</div>
  <br/>
<h3>Recent Posts</h3>

<% site.posts.sort('date', 'desc').limit(theme.max_post).forEach(function(post){ %>
<div class="row">

  <div class="three columns left lit">
    <p class="bottom"><%- full_date(post.date, 'll') %></p>
  </div>
  <div class="six columns left mb-3">
    <a href="<%- url_for(post.path) %>" >
      <% if (post.title == "") { %>
        no title
      <% } else { %>
        <%- post.title %>
      <% } %>
    </a>
    <% if (post.summary) { %>
      <br/>  
      <%- post.summary %>
    <% } %>
    
  </div>
  <div class="three columns left mb-3">
  <% if (post.thumbnail) { %>
    <img style="float: right; max-width: 100%; border-radius: 4px;" src="<%- post.path %><%- post.thumbnail %>" class=""/>
  <% } %>
  <% if (post.thumbnail_old) { %>
    <img style="float: right; max-width: 100%; border-radius: 4px;" src="<%- post.thumbnail_old %>" class=""/>
  <% } %>
</div>
</div>
<% }) %>

<h4> <a href="<%= config.root %>archives">All Posts</a></h4>
